header
  h3=name

if editing
  p
    label Name
    =input type='text' name='name' value=name autofocus=true
    label Address
    =textarea name='address' value=address rows=4
    label
      =radio-button value='canada' groupValue=classification
      | Canada
    label
      =radio-button value='usa' groupValue=classification
      | USA
    label
      =radio-button value='international' groupValue=classification
      | International
    label
      =radio-button value='institution' groupValue=classification
      | Institution
    button.js-save click='doneEditing' Done
else
  p.address=address

  if isSubscribed
    p Issues remaining: #{fulfillmentsRemaining}

  else
    p Not subscribed!


  p Issues received:
  ul
    each fulfillment in fulfillments
      li: link-to 'issue' fulfillment.issue: fulfillment.issue.title
    else
      p None

  button.js-edit click='edit' Edit
  br
  entity-subscription-form entity=model subscription=newSubscription save="subscribe"
