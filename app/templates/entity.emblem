header
  h3
    if isNew
      | New subscriber
    else
      =name

if editing
  p
    label Name
    =input type='text' name='name' value=name autofocus=true
    label Address
    =textarea name='address' value=address rows=4

    each keyToLabel in classificationKeyToLabel
      label
        =radio-button value=keyToLabel.key groupValue=classification
        | #{keyToLabel.label}

    button.js-save click='doneEditing' Done
    | &nbsp;
    button.js-cancel click='revertEditing' Revert
else
  p.address=address
  button.js-edit click='edit' Edit

  if isSubscribed
    p Issues remaining: #{fulfillmentsRemaining}

  else
    p Not subscribed!


  p Issues received:
  entity-fulfillment-list fulfillments=fulfillments

  entity-subscription-form entity=model subscription=newSubscription save="subscribe"
